@model IEnumerable<SMSDataContract.Common.Teacher>

@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-9 col-sm-9">
        <a href="~/Teacher/AddChangesTeacher?Id=0" class="btn btn-sm btn-success"><i class="glyphicon glyphicon-user"></i>Add new Teacher</a>
        <div class="row well">
            <span class="HeadingStyle">Teacher List</span>
            <table class="table table-bordered table-hover table-striped">
                <tr class="action info">
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CNIC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastQualification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JoinDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LeaveDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RefrenceName)
                    </th>
                    <th >
                        @Html.DisplayNameFor(model => model.RefrenceContact)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                   
                    <th style="width:90px;"><h5>ACTION</h5></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CNIC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastQualification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinDate, "{0:dd/MM/yyyy}")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RefrenceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RefrenceContact)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                       
                        <td>
                            <a href="/Teacher/AddChangesTeacher?Id=@item.TeacherId" class="btn btn-sm btn-info"><i class="glyphicon glyphicon-edit"></i></a>
                            <a href="/Teacher/DeleteTeacher?Id=@item.TeacherId" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-stop"></i></a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
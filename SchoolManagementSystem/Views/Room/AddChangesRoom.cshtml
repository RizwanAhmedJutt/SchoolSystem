@model SMSDataContract.Accounts.Room

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<div class="col-md-12">
    <div class="row">
        <div class="well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                    
                        <div class="row well">
                            @if (Model.RoomId == 0)
                            {
                                <span class="HeadingStyle">Add Room</span>

                            }
                            else
                            {
                                <span class="HeadingStyle">Update Room</span>
                            }
                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.RoomId)
                             

                                <div class="form-group">
                                    @Html.LabelFor(model => model.RoomName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                                            @Html.EditorFor(model => model.RoomName, new { htmlAttributes = new { @class = "form-control", id = "FirstContact", placeholder = "First Contact" } })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.RoomName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                   
                                <br />
                                <hr />
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-9">
                                                @if (Model.RoomId == 0)
                                                {
                                                    <input type="submit" value="Add" style="background-color:#fab625;color:white;" class="btn pull-right" />

                                                }
                                                else
                                                {
                                                    <input type="submit" value="Update" style="background-color:#fab625; color:white;" class="btn pull-right" />

                                                }
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}

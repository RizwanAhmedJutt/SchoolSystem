@model SMSDataContract.Accounts.StudentProfile

@{
    ViewBag.Title = "StudentProfile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
    function standby() {
        //document.getElementById('blah').src = 'https://www.google.com/images/srpr/logo11w.png'
        document.getElementById('blah').src = '/Images/Profile.png'
    }
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-8 col-sm-8">
            <div class="row well">
                <div class="form-horizontal">
                    @if (Model.ProfileId == 0)
                    {
                        <h2 class="text-center">Student Profile</h2>

                    }
                    else
                    {
                        <h2 class="text-center">Update Student Profile</h2>
                    }
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ProfileId)
                    @Html.HiddenFor(model => model.StudentId)

                    <div class="row form-group">

                        <div class="row">
                            <div class="col-sm-offset-4 col-sm-8">
                                <div class="center-block">
                                    <img id="blah" class="img-responsive img-rounded" src="#" alt="Alenate" onerror="standby()" />
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-12 ">
                                <input type="file" id="upVideo" name="AddVideo" style="width:220px;" onchange="readURL(this);" accept="image/*" class="upload btn btn-info center-block" />
                                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                                @*<input type="file" id="VideoUploadFile">*@
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <center class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-success btnlogin" />
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


